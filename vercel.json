{
  "version": 2,
  "builds": [
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/dashboard",
      "dest": "/dashboard/dist/index.html"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "/dashboard/dist/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/backend/wsgi.py"
    },
    {
      "src": "^/([a-zA-Z0-9\\-_]+)$",
      "headers": { "x-matched-path": "/public/$1.html" },
      "dest": "/public/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}


